{{#if orders}}
{{#each orders as |order|}}
<h4>Order ID:  {{order.id}}</h4>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#order.orderItems}}
    <tr>
      <td>{{name}}</td>
      <td>{{description}}</td>
      <td>{{price}}</td>
    </tr>
    {{/order.orderItems}}
    <tr>
      <td><h5>Total Cost: ${{order.orderTotalCost}}</h5></td>
    </tr>
  </tbody>
  <table>
{{/each}}
{{else}}
<p>You don't have any past orders yet.</p>
{{/if}}
