{{#each products as |product|}}

<div class="col-md-4 col-sm-6">
  <div class="panel panel-default">
    <div class="panel-heading"><h3>{{product.name}}</h3></div>
    <div class="panel-body">
        <p>{{product.description}}</p>
        <p>{{product.price}}</p>
      <button data-id="{{product.id}}" data-name="{{product.name}}" data-description="{{product.description}}" data-price="{{product.price}}" class="btn btn-primary display-when-logged-in" id="add-to-cart">Add To Cart</button>
    </div>
  </div>
</div>
{{/each}}
